<div class="flex items-center justify-center flex-col w-full h-screen">
  <div class="flex items-center justify-center flex-col w-[378px]">
    <div class="w-[48px] h-[48px]">
      <%= render LogoComponent.new %>
    </div>
    <h2 class="text-[1.125rem] mt-4 mb-8">Sign up</h2>

    <%= render "devise/shared/error_messages", resource: resource %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'w-full flex flex-col gap-4' }) do |f| %>
      <%= render InputComponent.new(
        name: "user[email]",
        label: "Email",
        type: "email",
        placeholder: "hello@email.com",
        autofocus: true,
        autocomplete: "email"
      ) %>

      <%= render InputComponent.new(
        name: "user[password]",
        label: "Password",
        type: "password",
        placeholder: "********",
        autocomplete: "new-password"
      ) %>
      <% if @minimum_password_length %>
        <p class="text-sm text-gray-500">
          (<%= @minimum_password_length %> characters minimum)
        </p>
      <% end %>

      <%= render InputComponent.new(
        name: "user[password_confirmation]",
        label: "Confirm Password",
        type: "password",
        placeholder: "********",
        autocomplete: "new-password"
      ) %>

      <div class="actions">
        <%= render ButtonComponent.new(
          color: "pink",
          text: "Sign up",
          classes: "w-full",
          type: "submit"
        ) %>
      </div>
    <% end %>

    <br />

    <%= render "devise/shared/links" %>
  </div>
</div>
