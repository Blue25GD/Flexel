<% case @variant
   when "primary" %>
  <div class="relative flex p-3 rounded-md text-pink-700 bg-pink-50 dark:bg-pink-100">
    <div class="icon-container icon-md text-2xl mr-3 mt-0.5 text-pink-500" aria-hidden="true">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-gift">
        <path d="M20 12v10H4V12M2 7h20v5H2zm10 15V7m0 0H7.5a2.5 2.5 0 0 1 0-5C11 2 12 7 12 7zm0 0h4.5a2.5 2.5 0 0 0 0-5C13 2 12 7 12 7z"></path>
      </svg>
    </div>
    <%= @text %>
  </div>
<% when "secondary" %>
  <div class="relative flex p-3 rounded-md text-gray-700 bg-gray-50 dark:bg-gray-100">
    <div class="icon-container icon-md text-2xl mr-3 mt-0.5 text-gray-500" aria-hidden="true">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-book">
        <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
        <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
      </svg>
    </div>
    <%= @text %>
  </div>
<% when "info" %>
  <div class="relative flex p-3 rounded-md text-blue-700 bg-blue-50 dark:bg-blue-100">
    <div class="icon-container icon-md text-2xl mr-3 mt-0.5 text-blue-500" aria-hidden="true">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-info">
        <circle cx="12" cy="12" r="10"></circle>
        <path d="M12 16v-4m0-4h.01"></path>
      </svg>
    </div>
    <%= @text %>
  </div>
<% when "danger" %>
  <div class="relative flex p-3 rounded-md text-red-700 bg-red-50 dark:bg-red-100">
    <div class="icon-container icon-md text-2xl mr-3 mt-0.5 text-red-500" aria-hidden="true">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x-octagon">
        <path d="M7.86 2h8.28L22 7.86v8.28L16.14 22H7.86L2 16.14V7.86L7.86 2zM15 9l-6 6m0-6 6 6"></path>
      </svg>
    </div>
    <%= @text %>
  </div>
<% when "success" %>
  <div class="relative flex p-3 rounded-md text-green-700 bg-green-50 dark:bg-green-100">
    <div class="icon-container icon-md text-2xl mr-3 mt-0.5 text-green-500" aria-hidden="true">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check-circle">
        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
        <path d="M22 4 12 14.01l-3-3"></path>
      </svg>
    </div>
    <%= @text %>
  </div>
<% when "warning" %>
  <div class="relative flex p-3 rounded-md text-yellow-700 bg-yellow-50 dark:bg-yellow-100">
    <div class="icon-container icon-md text-2xl mr-3 mt-0.5 text-yellow-500" aria-hidden="true">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-alert-triangle">
        <path d="M10.29 3.86 1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0zM12 9v4m0 4h.01"></path>
      </svg>
    </div>
    <%= @text %>
  </div>
<% else
     # type code here
   end %>