<div class="flex flex-col w-full">
  <div class="flex justify-between items-center">
    <div class="flex space-x-1">
      <label class="block text-xs font-semibold leading-[18px] text-gray-600 mb-2"><%= @label %></label>
    </div>
  </div>
  <input name="<%= @name %>" class="w-full min-w-0 rounded-md text-foreground bg-transparent
 border placeholder-gray-500 focus:outline-none relative
  z-10 <%= @error.nil? ? "border-gray-500" : "border-red-500" %> text-base leading-6 px-3 py-2" type="<%= @type %>" value="<%= @value %>" placeholder="<%= @placeholder %>"
         <% @options.each do |key, value| %> <%= "#{key}=\"#{value}\"" %> <% end %>>
  <% unless @error.nil? %>
  <span class="flex items-center text-red-600 leading-[18px] font-normal text-xs mt-2">
  <div class="text-current icon-container icon-sm text-lg mr-1.5" aria-hidden="true">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-alert-circle">
      <circle cx="12" cy="12" r="10"></circle>
      <path d="M12 8v4m0 4h.01"></path>
    </svg>
  </div> <%= @error %>
</span>
  <% end %>
</div>