<div class="w-screen h-screen z-[100] fixed top-0 left-0 flex justify-center items-center" style="display: none" id="spotlight" data-controller="spotlight">
  <div id="spotlight-backdrop" class="w-full h-full bg-black/[.45] fixed top-0 left-0" data-action="click->spotlight#hide keydown@window->spotlight#hide"></div>
  <div class="bg-white w-[500px] rounded-lg shadow-xl z-10">
    <input placeholder="What can we help with?" id="spotlight-search"
           class="min-w-0 rounded-md text-foreground border border-gray-200 placeholder-gray-500 focus:outline-none relative z-10 text-base leading-6 palette-input bg-background dark:bg-secondaryBg rounded-t-lg rounded-b-none h-full w-full px-6 py-4 !border-0 hover:border-transparent !focus:outline-none focus:border-transparent border-transparent"
           style="height: 56px;" value="" autofocus
           data-action="input->spotlight#search" data-spotlight-target="search"
    >

    <ul id="spotlight-results" class="w-full bg-white px-3 py-3 rounded-b-lg max-h-[314px] overflow-y-scroll" data-spotlight-target="results">
    </ul>
    <div class="py-4 font-mono text-pink-600 justify-center" style="transform: none;" hidden data-spotlight-target="notFound">¯\_(ツ)_/¯</div>
    <li class="flex items-center hover:bg-gray-100 p-3 gap-3 rounded-lg cursor-pointer opacity-60 hover:opacity-100" style="display: none" data-spotlight-target="documentTemplate">
      <div class="icon-container icon-md text-2xl transition-colors text-gray-600">
<!--        icon here-->
        <img src="https://via.placeholder.com/24" alt="icon" class="icon w-6 h-6 rounded-lg">
      </div>
      <span>Title</span>
      <div class="arrow-icon-container icon-md text-2xl z-10 text-gray-600 mr-auto">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-right">
          <path d="m9 18 6-6-6-6"></path>
        </svg>
      </div>
    </li>
  </div>
</div>